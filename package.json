{
  "name": "@coast-team/mute-crypto",
  "version": "0.2.0",
  "description": "Algorithm generating a cryptographic key for MUTE collaborative session",
  "main": "dist/mute-crypto.es5.cjs.js",
  "module": "dist/mute-crypto.es5.esm.js",
  "es2015": "dist/mute-crypto.es2015.esm.js",
  "esnext": "dist/mute-crypto.esnext.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coast-team/mute-crypto.git"
  },
  "keywords": [
    "p2p",
    "cryptographic",
    "key"
  ],
  "author": "",
  "contributors": [
    "Philippe Kalitine <philippe.kalitine@gmail.com> (https://philippe.kalitine.name/)",
    "Jean-Philippe Eisenbarth"
  ],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/coast-team/mute-crypto/issues"
  },
  "homepage": "https://github.com/coast-team/mute-crypto#readme",
  "scripts": {
    "build": "rm -rf dist && rollup --config",
    "postbuild": "mkdir -p dist/types/keyAgreementBD/proto && cp src/keyAgreementBD/proto/index.d.ts dist/types/keyAgreementBD/proto",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint --fix -p tsconfig.json --exclude src/proto/*d.ts && prettier --write --list-different 'src/**/*.ts' './*.{ts,js,json,md}' && markdownlint ./*.md -i 'CHANGELOG.md'",
    "cz": "git-cz",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prerelease": "npm run build",
    "release": "standard-version --no-verify",
    "publish": "npm publish --access public",
    "proto": "pbjs -t static-module -w es6 --no-verify --no-delimited --no-convert -o src/keyAgreementBD/proto/index.js src/keyAgreementBD/proto/index.proto && pbts -o src/keyAgreementBD/proto/index.d.ts src/proto/index.js",
    "postproto": "rollup -c rollup.config.proto.js"
  },
  "dependencies": {
    "crypto-api-wrapper": "^0.6.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "markdownlint-cli": "^0.12.0",
    "prettier": "^1.14.2",
    "protobufjs": "^6.8.8",
    "rollup": "^0.64.1",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-re": "^1.0.7",
    "rollup-plugin-strip": "^1.1.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "standard-version": "^4.4.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1",
    "validate-commit-msg": "^2.14.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "linters": {
      "*.md": [
        "prettier --write --list-different",
        "git add",
        "markdownlint -i 'CHANGELOG.md'"
      ],
      "*.ts": [
        "tslint --fix -p tsconfig.json",
        "git add"
      ],
      "*.{ts,json,scss,css}": [
        "prettier --write --list-different -e *proto*",
        "git add"
      ]
    },
    "concurrent": false
  }
}
