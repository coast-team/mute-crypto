{
  "name": "@coast-team/mute-crypto",
  "version": "0.0.1",
  "description": "Algorithm generating a cryptographic key for MUTE collaborative session",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coast-team/mute-crypto.git"
  },
  "keywords": [
    "p2p",
    "cryptographic",
    "key"
  ],
  "author": "",
  "contributors": [
    "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)",
    "Jean-Philippe Eisenbarth"
  ],
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/coast-team/mute-crypto/issues"
  },
  "homepage": "https://github.com/coast-team/mute-crypto#readme",
  "scripts": {
    "build": "rm -rf dist && tsc --outDir dist/commonjs -m commonjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint --fix -p tsconfig.json 'src/**/*.ts' && prettier --write --list-different 'src/**/*.ts' './*.{ts,js,json,md}'  && markdownlint ./*.md",
    "cz": "git-cz",
    "precommit": "lint-staged && npm run build && git add dist/*",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "prerelease": "npm run build && git add dist/*",
    "release": "standard-version --no-verify",
    "publish": "npm publish --access public"
  },
  "dependencies": {
    "crypto-api-wrapper": "^0.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "markdownlint-cli": "^0.11.0",
    "prettier": "^1.13.7",
    "standard-version": "^4.4.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2",
    "validate-commit-msg": "^2.14.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "linters": {
      "*.md": [
        "prettier --write --list-different",
        "git add",
        "markdownlint"
      ],
      "*.ts": [
        "tslint --fix -p tsconfig.json",
        "git add"
      ],
      "*.{ts,json,scss,css}": [
        "prettier --write --list-different -e *proto*",
        "git add"
      ]
    },
    "concurrent": false
  }
}
